{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["ES2017", "esnext.asynciterable", "ES2015"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "pretty": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": ["./yui/*"] // TODO: Check why this does not work.
    }
  },
  "include": ["./yui/**/*"],
  "exclude": ["node_modules", "dist"]
}
