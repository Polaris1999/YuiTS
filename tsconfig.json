{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019", "ES2017", "esnext.asynciterable", "ES2015"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "pretty": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": ["./yui/*"],
      "config-service/*": ["./yui/config-services/*"]
    }
  },
  "include": ["./yui/**/*"],
  "exclude": ["node_modules", "dist"]
}
